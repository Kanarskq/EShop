@model User

@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div>
    <h4>@Model.UserName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
    </dl>
</div>
<a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
<a href="@Url.Action("EditUser", new { id = Model.UserId })" class="btn btn-warning">Edit</a>
<form asp-action="DeleteUser" asp-route-id="@Model.UserId" method="post" style="display:inline;">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
